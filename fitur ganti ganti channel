require('dotenv').config();
const axios = require('axios');
const fs = require('fs');
const cliProgress = require('cli-progress');

const token = process.env.USER_TOKEN;

// Daftar channelId yang ingin diputar
const channelList = process.env.CHANNEL_IDS.split(',').map(id => id.trim());

const pesanList = fs.readFileSync('pesan.txt', 'utf-8')
  .split('\n').map(p => p.trim()).filter(p => p !== '');

if (pesanList.length === 0) {
  console.error("[!] File pesan.txt kosong.");
  process.exit(1);
}

let indexPesan = 0;
let indexChannel = 0;

async function hapusPesan(channelId, messageId) {
  try {
    await axios.delete(`https://discord.com/api/v9/channels/${channelId}/messages/${messageId}`, {
      headers: {
        Authorization: token,
        'User-Agent': 'Mozilla/5.0'
      }
    });
    console.log(`[üóëÔ∏è] Pesan ${messageId} di channel ${channelId} berhasil dihapus`);
  } catch (err) {
    console.error(`[!] Gagal hapus pesan:`, err.response?.status, err.response?.data || err.message);
  }
}

async function countdown(seconds) {
  const bar = new cliProgress.SingleBar({
    format: '‚è≥ Menunggu {remaining}s: [{bar}] {percentage}%',
    barCompleteChar: '‚ñà',
    barIncompleteChar: '-',
    hideCursor: true,
    linewrap: false,
    clearOnComplete: true
  });

  bar.start(seconds, 0, { remaining: seconds });

  for (let i = 0; i <= seconds; i++) {
    bar.update(i, { remaining: seconds - i });
    await new Promise(resolve => setTimeout(resolve, 1000));
  }

  bar.stop();
  console.log('‚è∞ Waktu tunggu selesai, lanjut kirim ke channel berikutnya...\n');
}

async function kirimPesanDenganRotasiChannel() {
  const pesan = pesanList[indexPesan];
  const channelId = channelList[indexChannel];

  indexPesan = (indexPesan + 1) % pesanList.length;
  indexChannel = (indexChannel + 1) % channelList.length;

  while (true) {
    try {
      const res = await axios.post(`https://discord.com/api/v9/channels/${channelId}/messages`,
        { content: pesan },
        {
          headers: {
            Authorization: token,
            'Content-Type': 'application/json',
            'User-Agent': 'Mozilla/5.0'
          }
        }
      );
      console.log(`\n[‚úî] Kirim ke ${channelId}: "${pesan}"`);
      setTimeout(() => hapusPesan(channelId, res.data.id), 500);
      break;
    } catch (err) {
      console.error(`\n[!] Gagal kirim ke ${channelId}, retry dalam 5 detik...`, err.response?.status, err.response?.data || err.message);
      await new Promise(resolve => setTimeout(resolve, 5000));
    }
  }

  await countdown(60);
  kirimPesanDenganRotasiChannel();
}

kirimPesanDenganRotasiChannel();
